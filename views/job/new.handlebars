<h1 class="new-job-header">Start a new application</h1>

<form method="post" action="/jobs">
    <section class="new-job">
        <div class="new-job-title">
            <label>Title</label>
            <input type="text" name="title" />
        </div>
        <div class="new-job-company">
            <label>Company</label>
            <input type="text" name="company" />
        </div>
        <div class="new-job-description">
            <label>Description</label>
            <textarea rows="4" name="description"></textarea>
        </div>
        <div class="new-job-status">
            <label>Application Status</label>
            <select name="status">
                <option value="not applied">Not Applied</option>
                <option value="in progress">In Progress</option>
                <option value="prepared">Prepared</option>
                <option value="submitted">Submitted</option>
            </select>
        </div>
        <div class="new-job-outcome">
            <label>Outcome</label>
            <select name="outcome">
                <option value="not applicable">Not Applicable</option>
                <option value="ghosted">Ghosted</option>
                <option value="rejection">Rejection</option>
                <option value="offer">Offer</option>
            </select>
        </div>
        <input class="sm" type="submit" value="Done" />
    </section>
</form>