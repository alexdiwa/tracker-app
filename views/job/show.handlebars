<section class="job-show">
    <div class="job-show-header">
        <h2>{{job.company}}</h2>
        <h3>{{job.title}}</h3>
    </div>
    <div class="job-show-details">
        <h2>Details</h2>
        <div class="job-show-details-description">
            {{job.description}}
        </div>  
    </div>
    <div class="status-outcome">
        <div class="job-show-status">
            <h2>Status</h2>
            <h3>{{job.status}}</h3>
        </div>
        <div class="job-show-outcome">
            <h2>Outcome</h2>
            <h3>{{job.outcome}}</h3>
        </div>
    </div>

    <div class="job-show-questions">
        <h2>Interview Questions</h2>
        {{#each job.questions}}
        <div class="job-show-question">{{this.questionAsked}}</div>
        <div>{{this.myAnswer}}</div>
        {{/each}}
    </div>

    <form class="question-form" method="post" action="/jobs/{{job._id}}/question">
        <label>Question</label>
        <input type="text" name="questionAsked"></input>
        <label>Answer</label>
        <textarea rows="4" name="myAnswer"></textarea>
        <input type="submit" value="Add Q&A" />
    </form>

    <div class="job-show-links">
        <a href="/jobs/{{job._id}}/edit"><button>Edit</button></a>
        <a href="/jobs/{{job._id}}?_method=DELETE"><button class="delete">Delete</button></a>
    </div>
</section>
